<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="0px"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:id="@+id/editor_item_text"
    	android:gravity="center"
    	android:textColor="@color/text"
        />
    <Button
        android:id="@+id/editor_item_plus"
        android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:text="@string/plus"
        />
    <Button
        android:id="@+id/editor_item_minus"
        android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:text="@string/minus"
        />
    <Button
        android:id="@+id/editor_item_delete"
        android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:text="@string/deletex"
        />
</LinearLayout>
